{% extends 'base.html.twig' %}

{% block title %}Products List{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-secondary">Products List</h1>
        <a href="{{ path('app_product_new') }}" class="btn btn-success">+ Create New Product</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">EasyCode</th>
                    <th scope="col">EAN Code</th>
                    <th scope="col">Designation</th>
                    <th scope="col">Segment</th>
                    <th scope="col">Width</th>
                    <th scope="col">Height</th>
                    <th scope="col">Diameter</th>
                    <th scope="col">Construction</th>
                    <th scope="col">Speed Index</th>
                    <th scope="col">Load Index</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.easyCode }}</td>
                    <td>{{ product.eanCode }}</td>
                    <td>{{ product.designation }}</td>
                    <td>{{ product.segment }}</td>
                    <td>{{ product.width }}</td>
                    <td>{{ product.height }}</td>
                    <td>{{ product.diameter }}</td>
                    <td>{{ product.construction }}</td>
                    <td>{{ product.speedIndex }}</td>
                    <td>{{ product.loadIndex }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> Show
                        </a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
